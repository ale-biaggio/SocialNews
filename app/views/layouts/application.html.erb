<%= javascript_import_module_tag "post" %>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<%= stylesheet_link_tag 'post' %>
<!DOCTYPE html>
<html>
  <head>
    <title>SocialNews</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <p class="alert"><%= alert %></p>

    <% if user_signed_in? %>
    Logged in as <%= current_user.name + current_user.surname%> [<%= link_to 'Fai il logout',
    destroy_user_session_path, :method => :delete%>]
    <% if current_user.email == "admin@gmail.com" %>
    <% current_user.admin! %>
    <%end%>
    <% end %>
    <%= yield %>
    <% if user_signed_in? %>
      <% if @pagy.next %>
        <div id="next_link">
          <%= link_to "next", pagy_url_for(@pagy, @pagy.next) %>
        </div>
      <% end %>
      <% if @pagy.prev %>
        <div id="prev_link">
          <%= link_to "prev", pagy_url_for(@pagy, @pagy.prev) %>
        </div>
      <% end %>
    <% end %>
  </body>
</html>
