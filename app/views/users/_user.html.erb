<div id="<%= dom_id user %>">
    <% if user.avatar.attached? %>
      <%= image_tag(user.avatar, style:"width: 100px") %>
    <% else %>
      <%= image_tag("default_avatar.jpg", style:"width: 100px") %>
    <% end %>  
    <p>
    <strong>User:</strong>
    <%= user.name %>
    <%= user.surname %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= user.email %>
  </p>

</div>
