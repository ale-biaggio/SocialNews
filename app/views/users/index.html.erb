<p class="alert alert-danger"><%= alert %></p>
<p class="alert alert-success"><%= notice %></p>
<div id="users" class="container-fluid" style="padding-top: 100px; width: 60%; ">
  <% @users.each do |user| %>
    <%= render user %>
    <div class="container" style="background-color: white;">
      <div class="row">
        <div class="col-4"></div>
        <div class="col-4" style="text-align: center;">
          <a class="btn feed-link"><%= link_to "Visualizza profilo", user, class: "btn feed-link", style: "margin-bottom: 100px;" %></a>
        </div>
        <div class="col-4"></div>
      </div>
    </div>
