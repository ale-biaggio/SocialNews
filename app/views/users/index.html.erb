<p style="color: green"><%= notice %></p>

<h1>Users</h1>

<div id="users">
  <% @users.each do |user| %>
    <%= render user %>
    <%if can? :all, @user%>
      <% if user.verified == 1 %>
        <%= button_to "Elimina verificato", verified_user_path(user), class: 'unverified-btn', id:user.id %> 
      <% else %>
        <%= button_to "Conferma verificato", verified_user_path(user), class: 'verified-btn', id:user.id %> 
      <% end %>
    <%end%>
    <p>
      <%= link_to "Show this user", user %>
    </p>
  <% end %>
</div>

<%= link_to "New user", new_user_path %>
