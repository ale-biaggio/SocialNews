<p style="color: green"><%= notice %></p>
<% if current_user==nil %>
  <a href="http://127.0.0.1:3000/users/sign_in" class="button">clicca qui per fare il login</a><br><br><br>
<% elsif can? :all, @user%>
  <%= button_to "Users", users_path, method: "get"%>
<% else %>
  <%= button_to "User", user_path(current_user.id), method: "get"%>
  <%= link_to "Tutte le notizie", root_path() %>
  <%= link_to "Seguiti", feed_path() %>
<% end %>

<h1>Posts</h1>

<%= link_to "New post", new_post_path %>
<div id="posts">
    <%= render @posts %>
</div>
<div id="next_link">
  <%= link_to "next", pagy_url_for(@pagy, @pagy.next) %>
</div>
