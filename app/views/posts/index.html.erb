<p style="color: green"><%= notice %></p>

<h1>Posts</h1>

<div id="posts">
  <% @posts.each do |post| %>
    <%= render post %>
    <%= link_to "Edit this post", edit_post_path(post) %> |

    <%= button_to "Destroy this post", post, method: :delete %>
  <% end %>
</div>

<%= link_to "New post", new_post_path %>
