<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Tag:</strong>
    <%= post.tag %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= post.body %>
  </p>

  <p>
    <strong>Image:</strong>
    <%= image_tag post.image if post.image.attached? %>
  </p>

  <p>
    <strong>Rank:</strong>
    <%= post.rank %>
  </p>

</div>
