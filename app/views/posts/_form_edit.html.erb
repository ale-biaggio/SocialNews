<div class='container' style="width: 60%;  background-color:white; text-align:center;">
  <br>
  <%= form_with(model: @post, local: true) do |form| %>
    <% if @post.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

        <ul>
          <% @post.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :title, style: "display: block" %>
      <%= form.text_field :title, style: "width: 90%;"%>
    </div>

    <br>

    <div>
      <%= form.label :category, style: "display: block" %>
      <%= form.select :category,[' ','Affari', 'Cultura','Politica','Salute','Spettacolo','Sport','Tecnologia'] %>
    </div>

    <br>

    <div>
      <%= form.label :body, style: "display: block" %>
      <%= form.text_area :body, style: "width: 90%; height: 150px;" %>
    </div>

    <br>

    <div>
      <%= form.label :image, style: "display: block" %>
      <%= form.file_field :image %>
    </div>
    <div class="field">
      <div style="display:none"> <%= form.select :user_id,[current_user.id] %> </div>
    </div>

    <div>
      <%= form.submit %>
    </div>
  <% end %>
  <br>
</div>
